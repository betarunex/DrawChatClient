<Window x:Class="DrawingClient.InputIP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawingClient"
        mc:Ignorable="d"
        Title="InputIP" Height="256.117" Width="213.032" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFD5F2FF" Offset="0"/>
                <GradientStop Color="#FFD5F2FF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox x:Name="IPinput" Height="27" Margin="10,108,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Background="White" FontSize="16"/>
        <Label x:Name="label" Content="Server IP:" HorizontalAlignment="Left" Height="43" Margin="55,24,0,0" VerticalAlignment="Top" Width="95" FontSize="20" Background="#FF313F42" BorderThickness="2" BorderBrush="Black" Foreground="White"/>
        <Button x:Name="Login" Content="login" HorizontalAlignment="Left" Margin="10,175,0,10" Width="89" Click="Login_Click"/>
        <Button x:Name="button" Content="Cancel" Margin="104,175,10,10" Click="button_Click"/>

    </Grid>
</Window>
